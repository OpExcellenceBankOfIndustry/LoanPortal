@page "/login"

@*<h3>Login</h3>*@

<EditForm Model="@login" class="" OnValidSubmit="@OnValidLoginSubmit">
    <DataAnnotationsValidator />
    <div class="col-5 col-lg-5 m-auto">
        <h4><b>Kindly login with your credentials</b></h4>

        <div class="multisteps-form__content">
            <div class="row mt-3">
                <div class="col-12">
                    <label>Email  <span style="color:#ff0000">*</span></label>
                    <InputText @bind-Value="login.Email" class="multisteps-form__input form-control" type="text" placeholder="Enter Email" />
                    <ValidationMessage For="@(() => login.Email)" />
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <label>Password <span style="color:#ff0000">*</span></label>
                    <InputText @bind-Value="login.Password" class="multisteps-form__input form-control" type="password" placeholder="Enter Password" />
                    <ValidationMessage For="@(() => login.Password)" />
                </div>
            </div>
        </div>
        <a style="color:#6f42c1"  href="javascript:void(0)" onclick="">Forgot password?</a>

        <div class="row">
            <div class="button-row d-flex mt-4 col-12">
                <button disabled="@loading" class="btn bg-gradient-dark ms-auto mb-0" type="submit">
                    @if (loading == true)
                    {
                        <span class="spinner-border spinner-border-sm mr-1"></span>
                    }
                    Login
                </button>
            </div>
        </div>

    </div>
</EditForm>

